<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" android:id="@+id/cardView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.038" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="1dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp">

        <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/title_"
                android:textSize="14sp"
                android:text="Title : " android:layout_marginTop="28dp" android:layout_marginStart="180dp"
                android:layout_marginEnd="6dp" android:layout_marginBottom="5dp"
                android:textColor="@android:color/tertiary_text_light"/>
        <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/image_photo"
                android:contentDescription="Movie Image"
        />
        <TextView
                android:layout_width="200dp"
                android:layout_height="104dp"
                android:id="@+id/description"
                android:text="OverView : " android:layout_marginTop="50dp"
                android:layout_marginStart="180dp" android:layout_marginEnd="6dp" android:layout_marginBottom="5dp"
                android:textSize="14sp"/>
        <TextView
                android:text="TextO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTiming"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="120dp"
                android:textColor="@color/cardview_light_background"
                android:background="@android:color/background_dark"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>